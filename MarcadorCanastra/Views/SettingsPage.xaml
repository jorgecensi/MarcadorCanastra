<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MarcadorCanastra.Views.SettingsPage"
    Title="Configurações">
    <ContentPage.Content>
        <TableView
            Intent="Settings"
            BackgroundColor="{DynamicResource PageBackgroundColor}"
            HasUnevenRows="True">
            <TableRoot>

                <TableSection
                    Title="Jogo"
                    TextColor="{DynamicResource SecondaryColor}">
                    <ViewCell
                        Height="250">
                        <StackLayout
                            Margin="15,0">
                            <Label
                                Text="Pontuação máxima"
                                TextColor="{DynamicResource SecondaryColor}" />
                            <RadioButton
                                Content="Sem Limite"
                                TextColor="{DynamicResource SecondaryColor}"
                                IsChecked="{Binding NoLimit}" />
                            <RadioButton
                                Content="3000"
                                TextColor="{DynamicResource SecondaryColor}"
                                IsChecked="{Binding Max3000}" />
                            <RadioButton
                                Content="4000"
                                TextColor="{DynamicResource SecondaryColor}"
                                IsChecked="{Binding Max4000}" />
                            <RadioButton
                                Content="5000"
                                TextColor="{DynamicResource SecondaryColor}"
                                IsChecked="{Binding Max5000}" />
                            <RadioButton
                                Content="8000"
                                TextColor="{DynamicResource SecondaryColor}"
                                IsChecked="{Binding Max8000}" />
                        </StackLayout>
                    </ViewCell>
                </TableSection>
                <TableSection
                    Title="Aparência"
                    TextColor="{DynamicResource SecondaryColor}">
                    <SwitchCell
                        Text="Manter tela sempre ligada"
                        On="{Binding KeepScreenOn}" />
                    <!--<SwitchCell
                        Text="Dark Mode"
                        On="{Binding IsDarkmode}" />-->
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>
